CREATE TABLE PONTO (ID BIGINT NOT NULL, DATA_PONTO TIMESTAMP, TIPO INTEGER, matricula_funcionario VARCHAR(255), PRIMARY KEY (ID))
CREATE TABLE PERMISSAO (IDPERMISSAO  SERIAL NOT NULL, id_ambiente SMALLINT, matricula_funcionario VARCHAR(255), PRIMARY KEY (IDPERMISSAO))
CREATE TABLE AMBIENTE (ID SMALLINT NOT NULL, DESCRICAO VARCHAR(255), PRIMARY KEY (ID))
CREATE TABLE FUNCIONARIO (MATRICULA VARCHAR(255) NOT NULL, NOME VARCHAR(255), SENHA VARCHAR(255), VALIDO BOOLEAN, ATIVO BOOLEAN, PRIMARY KEY (MATRICULA))
ALTER TABLE PONTO ADD CONSTRAINT FK_PONTO_matricula_funcionario FOREIGN KEY (matricula_funcionario) REFERENCES FUNCIONARIO (MATRICULA)
ALTER TABLE PERMISSAO ADD CONSTRAINT FK_PERMISSAO_id_ambiente FOREIGN KEY (id_ambiente) REFERENCES AMBIENTE (ID)
ALTER TABLE PERMISSAO ADD CONSTRAINT FK_PERMISSAO_matricula_funcionario FOREIGN KEY (matricula_funcionario) REFERENCES FUNCIONARIO (MATRICULA)
